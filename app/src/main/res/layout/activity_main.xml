<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mytooltest.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:text="Submit"/>

    <Button
        android:id="@+id/btn_banner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/btn_submit"
        android:text="Banner"/>

    <Button
        android:id="@+id/btn_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/btn_banner"
        android:text="Tab Layout"/>

    <Button
        android:id="@+id/btn_upmarquee"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/btn_tab"
        android:text="UP Marquee"/>

    <Button
        android:id="@+id/btn_upmarquee_recycler"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/btn_upmarquee"
        android:text="UP Marquee Recycler"/>

    <Button
        android:id="@+id/btn_circle_progress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/btn_upmarquee_recycler"
        android:text="Circle Progress"/>


</android.support.constraint.ConstraintLayout>
