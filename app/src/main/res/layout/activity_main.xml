<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.mytooltest.MainActivity">

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginTop="200dp"
            android:text="Submit"/>

        <Button
            android:id="@+id/btn_banner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/btn_submit"
            android:text="ViewPager 广告位"/>

        <Button
            android:id="@+id/btn_tab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/btn_banner"
            android:text="Tab Layout"/>

        <Button
            android:id="@+id/btn_upmarquee"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/btn_tab"
            android:text="跑马灯 - ViewFlipper 实现"/>

        <Button
            android:id="@+id/btn_upmarquee_recycler"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/btn_upmarquee"
            android:text="跑马灯 - Recycler 实现"/>

        <Button
            android:id="@+id/btn_circle_progress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/btn_upmarquee_recycler"
            android:text="各种进度条"/>

        <Button
            android:id="@+id/btn_gaus_blur"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/btn_circle_progress"
            android:text="高斯模糊"/>

        <Button
            android:id="@+id/btn_anim"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/btn_gaus_blur"
            android:text="动画"/>

        <Button
            android:id="@+id/btn_canvas"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/btn_anim"
            android:text="Canvas 绘制"/>

        <Button
            android:id="@+id/btn_xfermode"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/btn_canvas"
            android:text="Canvas Xfermode"/>

        <Button
            android:id="@+id/btn_guide"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/btn_xfermode"
            android:text="新手引导"/>

        <Button
            android:id="@+id/btn_image_loader"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/btn_guide"
            android:text="Image Loader"/>

        <Button
            android:id="@+id/btn_list"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/btn_image_loader"
            android:text="List and Recycler View"/>

        <Button
            android:id="@+id/btn_webview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/btn_list"
            android:text="WebView"/>

        <Button
            android:id="@+id/btn_thread"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/btn_webview"
            android:text="Thread Handler"/>

        <Button
            android:id="@+id/btn_touch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/btn_thread"
            android:text="Touch Test"/>

        <Button
            android:id="@+id/btn_alarm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/btn_touch"
            android:text="Alarm Test"/>

        <Button
            android:id="@+id/btn_test"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/btn_alarm"
            android:text="Test"/>

    </android.support.constraint.ConstraintLayout>

</ScrollView>

