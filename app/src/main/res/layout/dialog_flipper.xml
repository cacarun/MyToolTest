<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/icon_close"
        android:layout_gravity="right"
        android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="25dp"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/dialog_bg_white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="You can make money with sharing Dingtone NOW!"
            android:text="You can make money"
            android:textColor="#ff222222"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>

        <com.mytooltest.view.FlipperDot
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:flipInterval="2000"
            android:inAnimation="@anim/right_in"
            android:outAnimation="@anim/left_out"
            android:autoStart="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/dialog_flipper_img_width"
                    android:layout_height="@dimen/dialog_flipper_img_height"
                    android:src="@drawable/img_cash"/>

                <TextView
                    android:id="@+id/tv_earn_100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    tools:text="$100 is available for you!"
                    android:text="100 for you"
                    android:textSize="16dp"
                    android:textColor="#222222"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="55dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/dialog_flipper_img_width"
                    android:layout_height="@dimen/dialog_flipper_img_height"
                    android:src="@drawable/img_privileges"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    tools:text="Enjoy exclusive privileges"
                    android:text="rights for you"
                    android:textSize="16dp"
                    android:textColor="#222222"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="55dp"/>

            </LinearLayout>

        </com.mytooltest.view.FlipperDot>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="one step"
            android:textSize="14dp"
            android:textColor="#222222"
            android:layout_marginBottom="15dp"/>

        <Button
            android:id="@+id/btn_share"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Share Now"
            android:textColor="#ffffffff"
            android:textSize="18dp"
            android:background="@drawable/bg_round_orange"/>

    </LinearLayout>

</LinearLayout>