<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Faster Way"
        android:textColor="@color/gray"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dip"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/get_credits_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dip"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bg_ellipse_blue">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/get_credits_video_img"
                        android:layout_width="30dip"
                        android:layout_height="wrap_content"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_watch_videos"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/get_credits_video_img_txt"
                        android:textColor="#fcff00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="12345"
                        android:textSize="14dp"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/get_credits_video_tv"
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="31dip"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:text="Go Task"
                    android:textSize="15dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/get_credits_has_video_tv"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_gravity="right|top"
                android:gravity="center"
                android:visibility="gone"
                android:text="1"
                android:textSize="12dp"
                android:textColor="@android:color/white"
                android:background="@drawable/circle_red_for_earn_free" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginRight="5dip"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/get_credits_offer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dip"
                android:background="@drawable/bg_ellipse_blue"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/get_credits_offer_img"
                        android:layout_width="30dip"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_offer" />

                    <TextView
                        android:id="@+id/get_credits_offer_img_txt"
                        android:textColor="#fcff00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="Have a Try"
                        android:textSize="14dp"
                        android:visibility="gone" />
                </LinearLayout>


                <TextView
                    android:id="@+id/get_credits_offer_tv"
                    android:layout_width="match_parent"
                    android:layout_height="31dip"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:text="More Offer"
                    android:textColor="@android:color/white"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>