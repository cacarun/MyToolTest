<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <com.mytooltest.progress.view.SportProgressView
            android:id="@+id/sportview"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:emptyColor="#eaeaea"
            app:startColor="@color/colorPrimary"
            app:endColor="#FF6666"
            app:progressWidth="12dp"
            app:stepTextSize="14sp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:progressDrawable="@drawable/progress_bar_states"
            android:layout_width="200dp"
            android:layout_height="8dip"
            style="?android:attr/progressBarStyleHorizontal"
            android:indeterminateOnly="false"
            android:max="100"
            android:progress="20"
            android:secondaryProgress="40"
            android:layout_marginTop="20dp" />

        <com.mytooltest.progress.view.CircleProgress
            android:id="@+id/myCircleProgress"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:bgColor="#EAEAEA"
            app:foreEndColor="#FE0526"
            app:foreStartColor="#FF7701"
            app:progressWidth="12dp"
            app:useAnimation="true"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/pop_dialog_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="条形进度条"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/pop_dialog_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="条形进度条 + 指示头"
            android:layout_marginTop="20dp"/>

        <com.mytooltest.progress.view.ProgressXfermodeView
            android:id="@+id/progress_xfermode_view"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

        <com.mytooltest.progress.view.ProgressXfermodeView2
            android:id="@+id/view_progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="44dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <com.mytooltest.progress.view.SaleProgressView
                android:id="@+id/spv"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                app:nearOverText="@string/nearOverText"
                app:overText="@string/overText" />

            <SeekBar
                android:id="@+id/seek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spv"
                android:layout_marginTop="50dp"
                android:max="100" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@color/black">

            <ProgressBar
                android:id="@+id/loading"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:indeterminateDrawable="@drawable/progress_bar_loading"
                android:layout_gravity="center"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@color/black">

            <ImageView
                android:id="@+id/iv_loading"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_loading_bg2"
                android:layout_gravity="center"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@color/black">

            <ImageView
                android:id="@+id/iv_loading_call"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/drawable_anim_calling"
                android:layout_gravity="center"/>

        </FrameLayout>




        <SeekBar
            android:id="@+id/seek_bar_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:max="100"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:progressDrawable="@drawable/layer_progress"
            android:thumb="@drawable/shape_circle"
            android:layout_marginTop="20dp"/>

        <SeekBar
            android:id="@+id/seek_bar_02"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:max="100"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:thumb="@drawable/progress_arrow_head"
            android:layout_marginTop="20dp"/>

        <com.mytooltest.progress.view.RoundCornerImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/layer2"
            android:scaleType="centerCrop"
            app:corner_type="each_radius"
            app:corner_lt_radius="10dp"
            app:corner_rt_radius="10dp"
            app:corner_rb_radius="10dp"
            app:corner_lb_radius="10dp"/>

    </LinearLayout>

</ScrollView>
