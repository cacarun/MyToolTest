<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_alarm_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alarm Start" />

    <Button
        android:id="@+id/btn_alarm_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alarm End" />

    <Button
        android:id="@+id/btn_timer_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alarm Timer Stop" />


    <Button
        android:id="@+id/btn_alarm_test_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Alarm Test Start" />

    <Button
        android:id="@+id/btn_timer_test_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alarm Timer Test Stop" />


</LinearLayout>