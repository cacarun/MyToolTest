<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_scroll_with_viewpager_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="ScroolView嵌套ViewPager外部解决法" />

    <Button
        android:id="@+id/btn_scroll_with_viewpager_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="ScroolView嵌套ViewPager内部解决法" />


    <Button
        android:id="@+id/btn_viewpager_with_viewpager_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="ViewPager嵌套ViewPager内部解决法" />

    <Button
        android:id="@+id/btn_coordinator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="CoordinatorLayout Activity" />

</LinearLayout>